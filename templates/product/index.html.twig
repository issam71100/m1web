{% extends 'base.html.twig' %}

{% block body %}
	<div class="row">
		<div class="col">
			<h1>Produits</h1>
		</div>
	</div>
	<div class="row">
		{% for product in results %}
			<div class="col-sm-3">
				<img src="{{ asset('img/product/' ~ product.image) }}" class="img-fluid" alt="">
				<h4>{{ product.name }}</h4>
				<p class="font-weight-bold">{{ product.price }}â‚¬</p>
				<p>
					{#<a href="{{ url('product.details', { id: product.id }) }}" class="btn btn-primary">Visualiser</a>#}
					<a href="{{ url('product.details', { slug: product.slug }) }}" class="btn btn-primary">Visualiser</a>
				</p>
			</div>
		{% endfor %}
	</div>

	{% include '_inc/pagination.html.twig' with { total_items: totalProducts, items_per_page : productsPerPage, route_name: 'product.index' } %}
{% endblock %}







