{% extends 'base.html.twig' %}

{% block body %}
	<div class="row">
		<div class="col-sm-3">
			<img src="{{ asset('img/product/' ~ product.image) }}" class="img-fluid" alt="">
		</div>
		<div class="col-sm-9">
			<h3>{{ product.name }}</h3>
			<p>{{ product.description }}</p>
			<p class="font-weight-bold">{{ product.price }}€</p>
			<hr>
			<p class="h6"><span class="font-weight-bold">Catégorie :</span> {{ product.category.name }}</p>
		</div>
	</div>
{% endblock %}







