{% extends 'base.html.twig' %}

{% block body %}
	<div class="row">
		<div class="col">
			<h1>Recherche</h1>
		</div>
	</div>
	{% if searchResults | length == 0 %}
		<div class="row">
			<div class="col">
				<p class="font-weight-bold">Pas de résultats</p>
			</div>
		</div>
	{% else %}
		<div class="row">
			<div class="col">
				<p class="h5"><span class="font-weight-bold">{{ searchResults | length }}</span> Résultat{{ searchResults | length > 1 ? 's' : null }}</p>
			</div>
		</div>
		{% for product in searchResults %}
			<div class="row">
				<div class="col">
					<p>
						<a href="{{ url('product.details', { slug: product.slug }) }}" >{{ product.name }}</a>
					</p>
				</div>
			</div>
		{% endfor %}
	{% endif %}
{% endblock %}







